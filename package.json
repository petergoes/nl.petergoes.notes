{
  "name": "deep-dive-css",
  "version": "0.0.1",
  "description": "My deep dive into css",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --ext html,md,css index.js",
    "build": "npm-run-all build:*",
    "build:html": "node tasks/build-html.js",
    "build:assets": "ncp public build",
    "prepublish": "rimraf build && npm run build && npm run replace-for-gh-pages",
    "publish": "push-dir --dir=build --branch=gh-pages",
    "replace-for-gh-pages": "find build/* -type f -name '*.html' | xargs sed -i '' 's/href=\"\\//href=\"\\/notes\\//g'"
  },
  "keywords": [
    "css"
  ],
  "author": "Peter Goes <petergoes@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "expressjs": "1.0.1",
    "glob": "7.1.2",
    "lodash": "4.17.4",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "nodemon": "1.14.10",
    "npm-run-all": "4.1.2",
    "push-dir": "0.4.1",
    "rimraf": "2.6.2"
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.2",
    "express": "4.16.2",
    "marked": "0.3.12",
    "nunjucks": "3.0.1"
  }
}
